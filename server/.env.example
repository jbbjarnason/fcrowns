# Server Environment Variables
# Copy to .env for local development (outside docker-compose)
# For production, use infra/.env with docker-compose

# Database
DATABASE_URL=postgres://fivecrowns:fivecrowns@localhost:5432/fivecrowns

# JWT - use a secure random string in production (64+ chars)
JWT_SECRET=local-dev-only-not-for-production
JWT_ACCESS_TTL_DAYS=7

# SMTP (Mailpit for local dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=no-reply@fivecrowns.local
SMTP_SECURE=false

# Base URL
BASE_URL=http://localhost:8080

# LiveKit (local dev)
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecret
