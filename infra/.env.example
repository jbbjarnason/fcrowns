# Production Environment Variables
# Copy this to .env and fill in your values

# Environment mode
ENVIRONMENT=production

# Security - CHANGE THESE!
# Must be at least 32 characters in production
JWT_SECRET=your-secure-random-string-here-at-least-32-chars

# CORS - comma-separated list of allowed origins (no trailing slashes)
ALLOWED_ORIGINS=https://fcrowns.centroid.is

# Trust reverse proxy headers (X-Forwarded-For, X-Real-IP) for rate limiting
# Set to true when behind Caddy/nginx/etc.
TRUST_PROXY=true

# SMTP Configuration (for email verification & password reset)
# Get credentials from your SMTP provider: SendGrid, Mailgun, AWS SES, Postmark, Resend, etc.
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_FROM=no-reply@yourdomain.com
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_SECURE=true
# Set to false in production to require email verification
SKIP_EMAIL_VERIFICATION=false

# Base URL (for email links)
BASE_URL=https://fcrowns.centroid.is

# LiveKit (for video/audio)
LIVEKIT_URL=wss://livekit.fcrowns.centroid.is
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# TURN server shared secret (for WebRTC reliability)
# Generate with: openssl rand -hex 32
# IMPORTANT: Must also update this value in:
#   - turnserver.conf (static-auth-secret)
#   - livekit.yaml (turn.credential)
TURN_SECRET=your-turn-shared-secret

# Database
POSTGRES_USER=fivecrowns
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_DB=fivecrowns
DATABASE_URL=postgres://fivecrowns:your-secure-db-password@postgres:5432/fivecrowns
